<%# Twitter style card start %>

<div class="twPc-div">
    <a class="twPc-bg twPc-block"></a>

	<div>
		<div class="twPc-button">
    <%# follow button %>
            <button type="button" class="btn btn-primary btn-sm">#Follow</button>
    <%# follow button %>
		</div>

		<a title="Mert S. Kaplan" href="https://twitter.com/" class="twPc-avatarLink">
			<img alt="Mert S. Kaplan" src="https://i.pravatar.cc/" class="twPc-avatarImg">
		</a>

		<div class="twPc-divUser">
			<div class="twPc-divName">
				<a href="https://twitter.com/">Jane Doe</a>
			</div>
			<span>
				<a href="https://twitter.com/">@<span>janedoe</span></a>
			</span>
		</div>

		<div class="twPc-divStats">
			<ul class="twPc-Arrange">
				<li class="twPc-ArrangeSizeFit">
					<a href="https://twitter.com/" title="9.840 Tweet">
						<span class="twPc-StatLabel twPc-block">Tweets</span>
						<span class="twPc-StatValue">10K</span>
					</a>
				</li>
				<li class="twPc-ArrangeSizeFit">
					<a href="https://twitter.com/" title="885 Following">
						<span class="twPc-StatLabel twPc-block">Following</span>
						<span class="twPc-StatValue">1,267</span>
					</a>
				</li>
				<li class="twPc-ArrangeSizeFit">
					<a href="https://twitter.com/" title="1.810 Followers">
						<span class="twPc-StatLabel twPc-block">Followers</span>
						<span class="twPc-StatValue">2.3M</span>
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<%# twitter style card end %>

<div id="whatshap" class="form-group">
<h1 class="whatsnew">What's New</h1>
<form>
    <label for="exampleFormControlTextarea1"></label>
    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="What's happening?" rows="3"></textarea>
    <button type="button" class="btn btn-primary tweet">Tweet</button>
</form>
</div>